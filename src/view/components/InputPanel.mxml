<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="450" height="300">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var sparesInit:Number;
			[Bindable]
			public var sparesInc:Number = .5;
			[Bindable]
			public var sparesBottom:Number = 0;
			
			public var budget:Number;
			
			protected function go_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
			}

			protected function spares_clickHandler(event:MouseEvent):void
			{
				//check the maximum isnt over the budget
				//todo write code to check we are not going over the limit
			}

		]]>
	</fx:Script>
	
	<s:SkinnableContainer width="380" height="100%">
		<s:VGroup width="380" height="100%" >
			<s:Label id="title" text="Support Options" fontWeight="bold" left="10" top="10"/>
			<mx:Spacer height="10"/>
			<s:Group width="380" height="40">
				<s:HGroup>
					<s:Label text="Spares"/>
					<s:Label text="No" fontStyle="italic"/>
				</s:HGroup>
				<s:NumericStepper id="spares" right="0" stepSize="{sparesInc}" minimum="{sparesBottom}" value="{sparesInit}" click="spares_clickHandler(event)"/>
			</s:Group>
			<s:Group width="380" height="40">
				<s:HGroup>
					<s:Label text="Reduce NFF"/>
					<s:Label text="%" fontStyle="italic"/>
				</s:HGroup>
				<s:NumericStepper id="nff" right="0"/>
			</s:Group>
			<s:Group width="380" height="40">
				<s:HGroup>
					<s:Label text="Improve Reliability MTBF"/>
					<s:Label text="No" fontStyle="italic"/>
				</s:HGroup>
				<s:NumericStepper id="reliability" right="0"/>
			</s:Group>
			<s:Group width="380" height="40">
				<s:HGroup>
					<s:Label text="Reduce Repair Turnaround Time"/>
					<s:Label text="Days" fontStyle="italic"/>
				</s:HGroup>
				<s:NumericStepper id="turnaround" right="0"/>
			</s:Group>
			<mx:Spacer height="20"/>
			<s:Button id="go" label="Go" click="go_clickHandler(event)"/>
		</s:VGroup>
		
	</s:SkinnableContainer>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</s:Group>
