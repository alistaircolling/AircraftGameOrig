<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="view.components.*" xmlns:local="*"
					   creationComplete="windowedapplication1_creationCompleteHandler(event)"
					   width="1024" height="768"
					   >
	<fx:Style source="AircraftGame.css"/>
	<fx:Script>
		<![CDATA[
			import flashx.textLayout.events.StatusChangeEvent;
			
			import mx.events.FlexEvent;
			
			import signals.ChangeState;

			private var context:ProjectContext;
			
			protected function windowedapplication1_creationCompleteHandler(event:FlexEvent):void
			{
				context = new ProjectContext(this, true);
				updateState(ChangeState.INTRO_SCREEN);
			}
			
			
			public function updateState( s:String ):void{
				
				currentState = s;
				//add any additional logic here
				switch(currentState){
					case ChangeState.ENTER_SCREEN:
						inputView.visible = true;
						resultsView.visible = false;
						break
					case ChangeState.RESULTS_SCREEN:
						resultsView.visible = true;
						inputView.visible = false;
						break
					default:
						
						break
					
				}
				
				
			}

		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- <local:ProjectContext contextView="{this}"/> -->
	</fx:Declarations>
	<s:states>
		<s:State name="intro" />
		<s:State name="enter" />
		<s:State name="results" />
		<s:State name="final" />
	</s:states>
	<components:InputView id="inputView" includeIn="enter, intro, results" visible="false"/> <!-- input wont show correctly as it isnt visible when the data is first recived need to fix TODO -->
	<components:IntroView id="introView" includeIn="intro"/>
	<components:ResultsView id="resultsView" includeIn="results, enter" visible="false" horizontalCenter="0"/>
	<s:TextArea id="statusLabel" fontSize="12" bottom="5" right="5"  height="100" width="400"/>
</s:WindowedApplication>
